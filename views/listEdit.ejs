<% include partial/header%>

<h1 style="margin-top:7%;">Edit <%=list.name%></h1>

<div style="margin-left:40%;">
<form method="post" action="/show/<%=list._id%>/edit?_method=PUT">
  <div class="form-group" style="width:40%;">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" class="form-control" name="name" value="<%=list.name%>" id="exampleFormControlInput1" placeholder="Name" required>
    <label for="exampleFormControlInput1">Image url</label>
    <input type="text" class="form-control" name="pic" value="<%=list.pic%>" id="exampleFormControlInput1" placeholder="Image url" required>
  </div>
  <div class="form-group" style="width:40%;">
    <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea class="form-control" name="description" value="<%=list.description%>" id="exampleFormControlTextarea1" rows="3" required></textarea>
  </div>
  <div class="form-group " style="width:40%;">
      <label for="inputZip">Price</label>
      <input type="text" class="form-control" value="<%=list.price%>" name="price" id="inputZip" required>
      <label for="inputZip">Score</label>
      <input type="text" class="form-control" name="Score" value="<%=list.Score%>" id="inputZip" required>
    </div>
    <div class="form-group " style="width:40%;">
      <label for="inputZip">FB link</label>
      <input type="text" name="fblink" value="<%=list.fblink%>"class="form-control" id="inputZip" required>
      
    </div>

  <button style="margin-left:15%;">Submit</button>
    
</form>
</div>
<% include partial/footer%>
<% include partial/loadeffect%>